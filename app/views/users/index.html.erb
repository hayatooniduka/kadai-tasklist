<% if @users.any? %>
    <h1>Users</h1>
    
    <ul>
        <% @users.each do |user| %>
            <div>
                <%= user.name %>
            </div>
            <div>
                <p><%= link_to 'View tasks', user_path(user) %></p>
            </div>
        <% end %>
    </ul>

<% end %>