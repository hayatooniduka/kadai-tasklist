<%= form_with(model: task ) do |f| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% task.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div>
        <%= f.label :content, 'Task' %>
        <%= f.text_field :content %>
    </div>
    <div>
        <%= f.label :status, '進捗状況' %>
        <%=f.text_field :status %>
    </div>
    
    <%=f.submit '追加' %>
<% end %>
