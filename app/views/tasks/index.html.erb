<% if logged_in? %>
    <h2>Tasklist</h2>
    <%= render 'tasks/tasks', tasks: @tasks %>
    
    <%= link_to '新規Taskの追加', new_task_path %>
<% else %>
    <h1>Tasklist</h1>
    
    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
        <% end %>
    </ul>
    <div>
        <%= link_to '新規Taskの追加', new_task_path %>
    </div>
<% end %>